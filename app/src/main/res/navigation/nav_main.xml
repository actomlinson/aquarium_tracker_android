<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/nav_aquarium">

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.aquariumtracker.ui.GalleryFragment"
        android:label="fragment_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_aquarium"
        android:name="com.example.aquariumtracker.ui.AquariumFragment"
        android:label="fragment_aquarium"
        tools:layout="@layout/fragment_aquarium" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
        <action
            android:id="@+id/action_nav_aquarium_to_addMeasurement"
            app:destination="@id/addMeasurement2" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.aquariumtracker.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" >
        <action
            android:id="@+id/action_secondFragment_to_firstFragment"
            app:destination="@id/nav_aquarium" />
    </fragment>
    <fragment
        android:id="@+id/addMeasurement2"
        android:name="com.example.aquariumtracker.AddMeasurement"
        android:label="fragment_add_measurement"
        tools:layout="@layout/fragment_add_measurement" >
        <action
            android:id="@+id/action_addMeasurement_to_nav_aquarium"
            app:destination="@id/nav_aquarium" />
    </fragment>
</navigation>